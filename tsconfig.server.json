{
    "compilerOptions": {
        "target": "ES2023",
        "lib": [
            "ES2023"
        ],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "types": [
            "node"
        ],
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/server/**/*"
    ]
}